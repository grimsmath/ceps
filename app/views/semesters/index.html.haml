.col-md-12
  .panel.panel-info
    .panel-heading.clearfix
      %h4.panel-title.pull-left
        Semesters
      .pull-right
        = link_to new_semester_path, class: 'btn btn-primary btn-xs' do
          %i.fa.fa-plus
          New Semester

    .panel-body
      .form-group
        = text_field_tag :search, params[:search], class: "form-control", placeholder: "Search"

      = render 'semesters/partials/table'

    .panel-footer
      = link_to 'Dashboard', root_path, class: 'btn btn-success'