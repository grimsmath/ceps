= form_for(@catalog, html: { :role => "form" }) do |f|
  .col-md-12
    .panel.panel-primary
      .panel-heading
        %h4.panel-title
          = @catalog.title

      .panel-body
        %ul.nav.nav-tabs
          %li.active
            %a{href: '#general', data: {toggle: 'tab'}} General Details
          %li
            %a{href: '#semesters', data: {toggle: 'tab'}} Semesters
          %li
            %a{href: '#courses', data: {toggle: 'tab'}} Courses

        .tab-content
          #general.tab-pane.active
            .form-group
              = f.label :title, class: 'form-label'
              = f.text_field :title, class: 'form-control'

            .form-group
              = f.label :web_link, class: 'form-label'
              = f.text_field :web_link, class: 'form-control'

          #semesters.tab-pane
            %a#addSemester.pull-right.btn.btn-primary{href: "#", data: {toggle: 'modal', target: '#modal-semester'}}
              %i.fa.fa-plus
                Add Semester

            %table.table.table-bordered.table-striped
              %thead
                %tr
                  %th
                    Semester Title
                  %th(style="width: 100px; text-align: center")
                    Actions
              %tbody
                - @catalog.semesters.each do |semester|
                  %tr
                    %td
                      = semester.title
                    %td
                      Something

          #courses.tab-pane

      .panel-footer
        = f.submit 'Save', class: 'btn btn-primary'
        .pull-right
          = f.check_box :is_locked
