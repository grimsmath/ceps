.col-md-12
  .panel.panel-primary
    .panel-heading.clearfix
      %h4.panel-title.pull-left
        Academic Catalogs
      .pull-right
        = link_to new_catalog_path, class: 'btn btn-default btn-xs' do
          %i.fa.fa-plus
          New Catalog

    .panel-body
      .form-group
        = text_field_tag :search, params[:search], class: "form-control", placeholder: "Search"

      #catalogs
        = render 'catalogs/partials/table'

    .panel-footer
      = link_to 'Dashboard', root_path, class: 'btn btn-default'
